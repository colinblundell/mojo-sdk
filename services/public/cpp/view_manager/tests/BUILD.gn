# GYP version: mojo/mojo_services.gypi:mojo_view_manager_lib_unittests
test("mojo_view_manager_lib_unittests") {
  public_configs = [ rebase_path("mojo/build/config", ".", mojo_root) + ":mojo_sdk" ]
  sources = [
    "view_unittest.cc",
    "view_manager_unittest.cc",
  ]

  deps = [
    "//base",
    "//base/test:test_support",
    rebase_path("testing/gtest", ".", mojo_third_party_root),
    "//ui/gfx",
    "//ui/gfx:test_support",
    "//mojo/application_manager",
    "//mojo/converters/geometry",
    "//mojo/environment:chromium",
    rebase_path("mojo/services/public/cpp/geometry", ".", mojo_root),
    rebase_path("mojo/services/public/interfaces/geometry", ".", mojo_root),
    "//mojo/shell:test_support",
    rebase_path("mojo/services/public/interfaces/view_manager", ".", mojo_root),
    rebase_path("mojo/services/public/cpp/view_manager", ".", mojo_root),
  ]
  if (use_aura) {
    deps += [ rebase_path("mojo/services/public/cpp/view_manager/lib:run_unittests", ".", mojo_root) ]
  } else {
    deps += [ "//mojo/edk/test:run_all_unittests" ]
  }
}
